<main>
	<div id="profile" class="main center">

    <section class="profile-main ">
			<div class="content">
				<form class="form-horizontal"  method="post">

					<div class="form-group">
						<label class="control-label col-sm-2" for="name">Name:</label>
						<input class=" col-sm-4" type="text" name="name" value="">
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="status">Status:</label><br>
						<textarea  class=" col-sm-4" name="status"  cols="40"></textarea>
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="age">Age:</label>
						<input class=" col-sm-4" type="number" name="age" value="">
					</div>

					<div class="form-group">
						<label  class="control-label col-sm-2" for="race">Race:</label>
						<select class=" col-sm-4" name="race">
							<option disabled="true" selected="true" >-- select --</option>
							<option value="black">Black</option>
							<option value="white">White</option>
							<option value="asian">Asian</option>
							<option value="indian">Indian</option>
							<option value="mixed">Mixed</option>
						</select>
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="sex">Sex:</label>
						
						<select class=" col-sm-4" name="sex">
							<option disabled="true" selected="true" >-- select --</option>
							<option value="male">Male</option>
							<option value="female">Female</option>
						</select>
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="music">Music:</label>
						<input class=" col-sm-4" type="text" name="music" value="">
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="occupation">Occupation:</label>
						<input class=" col-sm-4" type="text" name="occupation" value="">
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="country">Country:</label>
						<input class=" col-sm-4" type="text" name="country" value="">
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="enemy">Enemies:</label>
						<input class=" col-sm-4" type="number" name="enemy" value="">
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="friend">Friends:</label>
						<input class=" col-sm-4" type="number" name="friend" value="">
					</div>

					<input class="btn btn-default" type="submit" name="submit" value="submit">
				</form>
			</div><!-- content -->

    </section>
	</div>
</main>
