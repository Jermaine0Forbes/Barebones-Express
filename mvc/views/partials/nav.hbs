<header class="container-fluid">
  <div class="container">
    <div class="col-sm-3">
      <h1 id="logo" ><a href="/">pictorama</a></h1>
    </div>

    <div class="col-sm-6">
      <form id="nav-search" class="pad padV" action="index.html" method="post">
        <div class="search">
          <input class="with-8" type="search" name="search" value="">
          <button  class="btn btn-default glyphicon glyphicon-search"type="button" name="button"></button>
        </div>
      </form>
    </div>
    <div class="col-sm-3">
      <nav class="pad padV">
        <ul class="list-inline spaced">
          {{#unless logged}}
          <li><a href="/login">login</a></li>
          <li><a href="/signup">signup</a></li>
          {{/unless}}
          {{#if logged}}
            <li class="submenu" >
              <a href="/account/{{username}}">{{username}}</a>
              <ul>
                <li><a href="/profile/{{username}}">profile</a></li>
              </ul>
            </li>
            <li><a href="/logout">logout</a></li>
          {{/if}}

          <li><a href="/upload">upload</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>
